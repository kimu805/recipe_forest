<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>
<br><br>

<% @recipes.each do |recipe| %>
  <%= link_to(recipe_path(recipe)) do %>
    <p>title : <%= recipe.title %></p>
    <%= image_tag recipe.image.variant(resize: "300x300") if recipe.image.attached? %>
    <p>user  : <%= recipe.user.nickname %></p>
  <% end %>
  <br><br>
<% end %>

<%= link_to "create new recipe", new_recipe_path %>