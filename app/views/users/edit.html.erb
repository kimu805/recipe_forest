<%= form_with model: current_user, url: user_path, local: true do |f| %>
  <div class= "field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class= "field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>

  <div class= "field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "update" %>
  </div>
<% end %>